<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Small Hydrogen Fuel Cell (1x1) -->
	<ThingDef ParentName="BuildingBase">
		<defName>HydrogenFuelCellSmall</defName>
		<label>hydrogen fuel cell</label>
		<description>A clean power generator that converts hydrogen gas into electricity through electrochemical reaction. Produces no pollution or heat. Requires connection to hydrogen pipe network. Output: 1200W. Approximately 30% more efficient than chemfuel generators. Acts as energy storage - converts excess power into hydrogen, then back to electricity when needed.</description>
		<thingClass>DubsElectrolysis.Building_HydrogenFuelCell</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<designatorDropdown>HydrogenFuelCell</designatorDropdown>
		<graphicData>
			<texPath>DubsElectrolysis/Buildings/HydrogenFuelCells/H2CellSmall</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<blockWind>false</blockWind>
		<fillPercent>0.4</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>0.8</Flammability>
			<Mass>25</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<canPlaceOverWall>false</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerPlant</compClass>
				<basePowerConsumption>-1200</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="DubsElectrolysis.CompProperties_GasPipe">
				<gasType>Hydrogen</gasType>
				<storageCapacity>0</storageCapacity>
			</li>
			<li Class="DubsElectrolysis.CompProperties_HydrogenFuelCell">
				<h2ConsumptionPerTick>0.05</h2ConsumptionPerTick>
				<h2StorageCapacity>40</h2StorageCapacity>
			</li>
		</comps>
		<designationCategory>Power</designationCategory>
		<researchPrerequisites>
			<li>Electrolysis</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</ThingDef>

