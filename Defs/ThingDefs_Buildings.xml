<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Small Electrolysis Chamber -->
	<ThingDef ParentName="BuildingBase">
		<defName>ElectrolysisChamberSmall</defName>
		<label>small electrolysis chamber</label>
		<description>A compact electrolysis unit that splits water into hydrogen and oxygen gas. Consumes 500W of power and water from the pipe network. Produces hydrogen for fuel cells and oxygen for life support. Automatically shuts off when storage tanks are full. Internal storage: 100 O2, 200 H2.</description>
		<thingClass>DubsElectrolysis.Building_ElectrolysisChamber</thingClass>
		<designatorDropdown>ElectrolysisChamber</designatorDropdown>
		<graphicData>
			<texPath>Things/Building/Production/ElectrolysisChamberSmall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,1.6,1.6)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<blockWind>true</blockWind>
		<fillPercent>0.5</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>3000</WorkToBuild>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>0.5</Flammability>
			<Mass>50</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(2,2)</size>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<building>
			<canPlaceOverWall>false</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="DubsBadHygiene.CompProperties_Pipe">
				<mode>Water</mode>
			</li>
			<li Class="DubsElectrolysis.CompProperties_GasPipe">
				<gasType>Oxygen</gasType>
				<storageCapacity>0</storageCapacity>
			</li>
			<li Class="DubsElectrolysis.CompProperties_GasPipe">
				<gasType>Hydrogen</gasType>
				<storageCapacity>0</storageCapacity>
			</li>
			<li Class="DubsElectrolysis.CompProperties_Electrolyzer">
				<waterConsumptionPerTick>0.1</waterConsumptionPerTick>
				<h2ProductionPerTick>0.2</h2ProductionPerTick>
				<o2ProductionPerTick>0.1</o2ProductionPerTick>
				<h2StorageCapacity>200</h2StorageCapacity>
				<o2StorageCapacity>100</o2StorageCapacity>
			</li>
		</comps>
		<designationCategory>Power</designationCategory>
		<researchPrerequisites>
			<li>Electrolysis</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>

