	<!-- Hydrogen Fuel Cell (Small 1x2) -->
	<ThingDef ParentName="BuildingBase">
		<defName>HydrogenFuelCellSmall</defName>
		<label>small hydrogen fuel cell</label>
		<description>A compact power generation unit that converts hydrogen gas into electricity through electrochemical reactions. More efficient than chemfuel generators and produces no pollution. Requires connection to hydrogen pipe network. Stores up to 40 units of hydrogen and generates 1200W continuously while fuel is available. Acts as both a battery and generator.</description>
		<thingClass>DubsElectrolysis.Building_HydrogenFuelCell</thingClass>
		<designatorDropdown>HydrogenFuelCell</designatorDropdown>
		<graphicData>
			<texPath>Things/Building/Power/HydrogenFuelCellSmall</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1,2)</drawSize>
			<damageData>
				<rect>(0.2,0.2,0.6,1.6)</rect>
			</damageData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<blockWind>false</blockWind>
		<fillPercent>0.35</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>2500</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Mass>25</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,2)</size>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<canPlaceOverWall>false</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerPlant</compClass>
				<basePowerConsumption>-1200</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="DubsBadHygiene.CompProperties_Pipe">
				<mode>Hydrogen</mode>
			</li>
			<li Class="DubsElectrolysis.CompProperties_HydrogenFuelCell">
				<h2ConsumptionPerTick>0.05</h2ConsumptionPerTick>
				<h2StorageCapacity>40</h2StorageCapacity>
			</li>
		</comps>
		<designationCategory>Power</designationCategory>
		<researchPrerequisites>
			<li>Electrolysis</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	</ThingDef>

