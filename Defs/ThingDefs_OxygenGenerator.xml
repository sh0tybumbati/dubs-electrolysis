<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Tiny Oxygen Generator (1x1) -->
	<ThingDef ParentName="BuildingBase">
		<defName>OxygenGeneratorTiny</defName>
		<label>tiny oxygen generator</label>
		<description>A compact power generator that burns pure oxygen to produce electricity. Generates twice the power per unit fuel compared to chemfuel or wood, but produces significant heat. Requires connection to oxygen pipe network. Output: 1200W. Warning: Generates substantial heat - ventilation recommended.</description>
		<thingClass>DubsElectrolysis.Building_OxygenGenerator</thingClass>
		<designatorDropdown>OxygenGenerator</designatorDropdown>
		<graphicData>
			<texPath>DubsElectrolysis/Buildings/OxygenGenerators/TinyO2Gen</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<blockWind>false</blockWind>
		<fillPercent>0.4</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.35</staticSunShadowHeight>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Mass>20</Mass>
		</statBases>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<costList>
			<Steel>40</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<canPlaceOverWall>false</canPlaceOverWall>
		</building>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerPlant</compClass>
				<basePowerConsumption>-1200</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>10</heatPerSecond>
			</li>
			<li Class="DubsElectrolysis.CompProperties_GasPipe">
				<gasType>Oxygen</gasType>
				<storageCapacity>0</storageCapacity>
			</li>
			<li Class="DubsElectrolysis.CompProperties_OxygenGenerator">
				<o2ConsumptionPerTick>0.05</o2ConsumptionPerTick>
			</li>
		</comps>
		<designationCategory>Power</designationCategory>
		<researchPrerequisites>
			<li>Electrolysis</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</ThingDef>

